<div class="comments-container">
  <strong><%= t('views.common.mention_list') %>:</strong>
  <% if (mentioned_reports = report.mentioned_reports.order(:id).includes(:user).presence) %>
    <ul>
      <% mentioned_reports.each do |mentioned_report| %>
        <li>
          <%= link_to mentioned_report.title, mentioned_report %>
          <small>
            (<%= link_to mentioned_report.user.name_or_email, mentioned_report.user %> - <%= l mentioned_report.created_at, format: :short %>)
          </small>
        </li>
      <% end %>
    </ul>
  <% else %>
    (<%= t('.no_mentions') %>)
  <% end %>
</div>
