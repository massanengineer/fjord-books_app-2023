<h1><%= t('views.common.title_index', name: User.model_name.human) %></h1>

<table>
  <thead>
    <tr>
      <th><%= User.human_attribute_name(:email) %></th>
      <th><%= User.human_attribute_name(:postal_code) %></th>
      <th><%= User.human_attribute_name(:address) %></th>
      <th><%= User.human_attribute_name(:profile) %></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.postal_code %></td>
      <td><%= user.address %></td>
      <td><%= user.profile %></td>
      <td><%= link_to t('views.common.show'), user_path(user) %></td>
      <% if user == current_user %>
      <td><%= link_to t('views.common.edit'), edit_user_registration_path %></td>
      <% end %>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @users %>
